                    <input type="hidden"  class="form-control"  name="id" value="<%=data.id %> ">

                    <div class="mb-3">
                        <label for="amount" class="form-label">Nom</label>
                        <input type="text"  class="form-control"  name="nom" value="<%=data.nom %> ">
                    </div>
                    <div class="mb-3">
                        <label for="amount" class="form-label">email</label>
                        <input type="text"  class="form-control"  name="email" value="<%-data.email %>">
                    </div>
                    <div class="mb-3">
                        <label for="amount" class="form-label">commentaire</label>
                        <input type="text"  class="form-control"  name="commentaire" value="<%-data.commentaire %>">
                    </div>

                    <button type="submit" class="btn btn-primary">modifier</button>
                </form>
            </div>
        </div>
        </div>  
    </main>

