<%- include('./side_bar.ejs') %>

<main class="main">
    <div class="Container p-4 ">
        <div class="d-flex justify-content-between border-bottom fw-bold fs-4">
            <p class="">Comments</p>
        </div>
        <div class="d-flex justify-content-between">
            <div class="d-flex justify-content-between mt-3 fw-bold">
                <p class="m-0">Show</p>
                <select class="select_style sort rounded mx-1" style="font-size: 14px;">
                    <option value="25">25</option>
                    <option value="50">50</option>
                    <option value="75">75</option>
                    <option value="All">All</option>
                </select>
                <p class="m-0">entities</p>
            </div>
            <!-- <div class="d-flex justify-content-end my-2 px-5 fw-bold">
                <button class="btn bg-dark px-3 text-blod" style=" color:#ff9907 ;" data-bs-toggle="modal" data-bs-target="#send_to">Ajouter</button>
            </div> -->
        </div>
        
        <div class="table-responsive card p-2">
            <table style="overflow: overlay;" class="table table-striped" id="myTable">
                <thead>
                    <tr class="rounded">
                        <th scope="col" hidden>id</th>
                        <th scope="col">Nom</th>
                        <th scope="col">email</th>
                        <th scope="col">commentaire</th>
                        <th scope="col">Avis</th>
                        <th scope="col">article</th>

                        <th scope="col text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="rounded">
                        <% data.forEach(commantaire => { %>
                            <tr>
                                <td scope="col" hidden> <%-commantaire.id %>  </td>
                                <td scope="col"> <%-commantaire.nom %>  </td>
                                <td scope="col"> <%-commantaire.email %></td>
                                <td scope="col"> <%-commantaire.commentaire %></td>
                                <td scope="col"> <%-commantaire.avis %></td>
                                <td scope="col"> <%-commantaire.article.title %></td>
                                <td><a href="/comments/edite/<%-commantaire.id %>">
                                   <input type="button" class="text-info border border-3 border-info bg-white px-4 py-2 rounded-3 text-blod" value="update">
                                </a>
                                <a href="/comments/delete/<%-commantaire.id %>"><input type="button"  class="text-danger border border-3 border-danger bg-white px-4 py-2 rounded-3 text-blod" value="delete">  </a></td>
                               
                         </tr>  
                               <% }) %>
                    
                </tbody>
            </table>
        </div>
    </div>
    <div class="modal fade" id="send_to" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <!-- <h5 class="modal-title" id="staticBackdropLabel">Ajouter</h5> -->
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <p class="d-flex m-0 mt-3 justify-content-center" id="warning"></p>
            <div class="modal-body">
                <form action="/comments/createComment" method="post">
                 

                    <div class="mb-3">
                        <label for="amount" class="form-label">Nom</label>
                        <input type="text"  class="form-control"  name="nom" >
                    </div>
                    <div class="mb-3">
                        <label for="amount" class="form-label">email</label>
                        <input type="text"  class="form-control"  name="email" >
                    </div>
                    <div class="mb-3">
                        <label for="amount" class="form-label">commentaire</label>
                        <input type="text"  class="form-control"  name="commentaire" >
                    </div>
                    <div class="mb-3">
                    <select id="recipient_" class="form-control form-control-lg mb-3" name="articleId">
                        <label for="amount" class="form-label">Article</label>

                         <% data2.forEach(article => { %>

                        <option value="<%-article.id%>"><%-article.title%></option>
                       
                        <%})%>
                    </select> 
                   </div>
                  
                    <button type="submit" class="btn btn-primary">Ajouter</button>
                </form>
            </div>
        </div>
    </div>
</main>

<script src="js/dashboard_js/js.js"></script>
    <script src="js/dashboard_js/main.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready( function () {
$('#myTable').DataTable();
} );
    </script>
</body>
</html>