<%- include('./side_bar.ejs') %>

<main class="main">
    <div class="Container p-4 ">
        <div class="d-flex justify-content-between border-bottom fw-bold fs-4">
            <p class="">Transactions</p>
        </div>
        <div class="d-flex justify-content-end mt-3 px-5 fw-bold">
            <button class="btn bg-info px-4 text-blod " data-bs-toggle="modal" data-bs-target="#send_to">Ajouter</button>
        </div>

        <div class="table-responsive card mt-3 p-2">
            <table style="overflow: overlay;" class="table table-striped" id="myTable">
                <thead>
                    <tr class="rounded">
                        <th scope="col">id</th>
                        <th scope="col">idARTCLE</th>

                        <th scope="col">Nom</th>
                        <th scope="col">email</th>
                        <th scope="col">commentaire</th>
                        <th scope="col text-center">Action</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="rounded">
                        <% commantaire.forEach(commantaire => { %>
                            <tr>
                                <td scope="col"> <%-commantaire.id %>  </td>
                                <td scope="col"> <%-commantaire.articleId %>  </td>
                                <td scope="col"> <%-commantaire.nom %>  </td>
                                <td scope="col"> <%-commantaire.email %></td>
                                <td scope="col"> <%-commantaire.commentaire %></td>
                                <td><a href="/comments/edite/<%-commantaire.id %>">
                                   <input type="button" class="text-info border border-3 border-info bg-white px-4 py-2 rounded-3 text-blod" value="update">
                                </a>
                                <a href="/comments/delete/<%-commantaire.id %>"><input type="button"  class="text-danger border border-3 border-danger bg-white px-4 py-2 rounded-3 text-blod" value="delete">  </a></td>
                               
                         </tr>  
                               <% }) %>
                    
                </tbody>
            </table>
            
        </div>
    </div>
    <div class="modal fade" id="send_to" data-bs-backdrop="static" data-bs-keyboard="false"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Ajouter</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <p class="d-flex m-0 mt-3 justify-content-center" id="warning"></p>
            <div class="modal-body">
                <form action="/comments" method="post">
                 

                    <div class="mb-3">
                        <label for="amount" class="form-label">Nom</label>
                        <input type="text"  class="form-control"  name="nom" >
                    </div>
                    <div class="mb-3">
                        <label for="amount" class="form-label">email</label>
                        <input type="text"  class="form-control"  name="email" >
                    </div>
                    <div class="mb-3">
                        <label for="amount" class="form-label">commentaire</label>
                        <input type="text"  class="form-control"  name="commentaire" >
                    </div>

                    <button type="submit" class="btn btn-primary">Ajouter</button>
                </form>
            </div>
        </div>
    </div>
   
     
</main>

<script src="js/dashboard_js/js.js"></script>
    <script src="js/dashboard_js/main.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
    <script>
        $(document).ready( function () {
$('#myTable').DataTable();
} );
    </script>
</body>
</html>