
    <%- include('./side_bar.ejs') %>

    <main class="main">
        <div class="Container p-4 ">
            <div class="d-flex justify-content-between border-bottom fw-bold fs-4">
                <p class="">Categories</p>
            </div>
            <div class="d-flex justify-content-between">
                <div class="d-flex justify-content-between mt-3 fw-bold">
                    <div class="d-flex">
                        <p class="m-0">Show</p>
                        <select class="select_style sort rounded mx-1" style="font-size: 14px;">
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="75">75</option>
                            <option value="All">All</option>
                        </select>
                        <p class="m-0">entities</p>
                    </div>
                </div>
                <div class="d-flex justify-content-end my-2 px-5 fw-bold">
                    <button class="btn bg-dark px-3 text-blod" style=" color:#ff9907 ;" data-bs-toggle="modal" data-bs-target="#send_to">Ajouter</button>
                </div>
            </div>
            <div class="table-responsive card p-2">
                <table style="overflow: overlay;" class="table table-striped">
                    <thead>
                        <tr class="rounded" style="font-size: 16px;">
                            <th scope="col">id</th>
                            <th scope="col">name</th>
                            <th scope="col">email</th>
                            <th scope="col">commentaire</th>
                            <th scope="col">delete</th>
                            <th scope="col">update</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="rounded">
                            <% categories.forEach(categorie => { %>
                        <tr>
                            <td scope="col"> <%-categorie.id %>  </td>
                            <td scope="col"> <%-categorie.name %></td>
                            <td><a href="/comments/edite/<%-categorie.id %>">
                                <input type="button" class="text-info border border-3 border-info bg-white px-4 py-2 rounded-3 text-blod" value="update">
                            </a>
                            <a href="/comments/delete/<%-categorie.id %>"><input type="button"  class="text-danger border border-3 border-danger bg-white px-4 py-2 rounded-3 text-blod" value="delete">  </a></td>
                        </tr>  
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>  
    </main>

    <script src="js/dashboard_js/js.js"></script>
        <script src="js/dashboard_js/main.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>
</html>